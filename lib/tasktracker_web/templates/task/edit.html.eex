<h1>Edit Task</h1>

<%= if @task.user_id && @current_user && Tasktracker.Accounts.get_user(@task.user_id).name == @current_user.name do
      render "form_assigned.html", Map.put(assigns, :action, Routes.task_path(@conn, :update, @task))
    else
      render "form_unassigned.html", Map.put(assigns, :action, Routes.task_path(@conn, :update, @task))
    end%>

<span><%= link "Back", to: Routes.task_path(@conn, :index) %></span>
